<h1>Comments</h1>

{{#if comments.length}}
  {{#each comments}}
    <div class="comment-card">
      <div class="comment-author">{{this.author}}</div>
      <div class="comment-date">{{this.createdAt}}</div>
      <div class="comment-text">{{{this.text}}}</div>
    </div>
  {{/each}}
{{else}}
  <p>No comments yet.</p>
{{/if}}

{{#if user}}
  <a href="/comment/new"><button>Post a new comment</button></a>
{{else}}
  <p><a href="/login">Login</a> to comment.</p>
{{/if}}
